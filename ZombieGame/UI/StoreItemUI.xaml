<UserControl x:Class="ZombieGame.UI.StoreItemUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZombieGame.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="135" Width="176">
    <Grid Width="175.125" Height="135">
        <DockPanel Height="135" LastChildFill="False" VerticalAlignment="Top" Width="175.125">
            <Label x:Name="lblName" DockPanel.Dock="Top" Height="25" Content="Arma nome" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold"></Label>
            <DockPanel DockPanel.Dock="Bottom" Height="30">
                <Button x:Name="btnBuy" Content="Comprar" VerticalAlignment="Top" Background="#FF1F801F" Foreground="White" FontWeight="Bold" Click="btnBuy_Click" Height="30" FontSize="18" Width="145"/>
                <Button x:Name="btnInfo" Background="#FF02029E" Foreground="White" Content="i" FontSize="20" FontWeight="Bold" FontStyle="Italic" Click="btnInfo_Click"></Button>
            </DockPanel>
            <Image x:Name="img" Height="80" VerticalAlignment="Top" Width="175.125"/>
        </DockPanel>
    </Grid>
</UserControl>
