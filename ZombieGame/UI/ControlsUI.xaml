<UserControl x:Class="ZombieGame.UI.ControlsUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZombieGame.UI"
             mc:Ignorable="d" 
             d:DesignHeight="691" d:DesignWidth="1274" Loaded="UserControl_Loaded">
    <Grid>
        <DockPanel LastChildFill="False">
            <Label Content="CONTROLES" FontWeight="Bold" FontSize="36" DockPanel.Dock="Top" Margin="50" Foreground="#FFC80000" HorizontalContentAlignment="Center">
                <Label.Effect>
                    <DropShadowEffect Opacity="0.5"/>
                </Label.Effect>
            </Label>
            <DockPanel DockPanel.Dock="Top" Margin="200,0" Background="#3FFFFFFF">
                <Image x:Name="Image" DockPanel.Dock="Top" Height="350" Margin="20"/>
            </DockPanel>
            <local:GradientButtonUI x:Name="BackButton" Padding="20,10" Content="BACK" FontSize="22" DockPanel.Dock="Bottom" Margin="50,0,50,50" UnfocusedForeground="White" MouseLeftButtonUp="BackButton_MouseLeftButtonUp" />
        </DockPanel>
    </Grid>
</UserControl>
