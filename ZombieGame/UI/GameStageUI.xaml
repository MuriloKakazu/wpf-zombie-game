<UserControl x:Class="ZombieGame.UI.GameStageUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZombieGame.UI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.Effect>
            <DropShadowEffect Opacity="0.5"/>
        </Grid.Effect>
        <StackPanel>
            <Label x:Name="Score" Content="SCORE: 0" FontWeight="Bold" FontSize="22" HorizontalAlignment="Center" Foreground="White"></Label>
            <Label x:Name="RunningTime" Foreground="White" FontWeight="Bold" FontSize="16" Content="00:00" HorizontalAlignment="Center"></Label>
        </StackPanel>
    </Grid>
</UserControl>
