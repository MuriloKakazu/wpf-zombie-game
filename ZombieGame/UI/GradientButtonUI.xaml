<UserControl x:Class="ZombieGame.UI.GradientButtonUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZombieGame.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" MouseLeftButtonUp="UserControl_MouseLeftButtonUp" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Grid>
        <DockPanel Margin="10,0">
            <Label x:Name="Text" FontSize="22" Margin="20,3,20,5" HorizontalAlignment="Left" x:FieldModifier="public" VerticalAlignment="Center">
                <Label.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="50"/>
                </Label.Effect>
            </Label>
        </DockPanel>
    </Grid>
</UserControl>
