<UserControl x:Class="ZombieGame.UI.EndGameUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZombieGame.UI"
             mc:Ignorable="d" 
             d:DesignHeight="691" d:DesignWidth="1274">
    <Grid>
        <StackPanel Margin="0">
            <DockPanel LastChildFill="False" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,-2">
                <Label Content="GAME OVER" Foreground="#FFC70000" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0,50,0,0">
                    <Label.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="50"/>
                    </Label.Effect>
                </Label>
                <Label x:Name="Score" Content="PONTUAÇÃO: 0000" DockPanel.Dock="Top" FontSize="48" Margin="200,50,200,30" Foreground="#FFFFCA00"></Label>
                <DockPanel DockPanel.Dock="Top">
                    <Label Content="NOME:" FontSize="48" Foreground="White" Margin="50,0,0,0">
                        <Label.Effect>
                            <DropShadowEffect BlurRadius="50" ShadowDepth="0"/>
                        </Label.Effect>
                    </Label>
                    <TextBox x:Name="Name" DockPanel.Dock="Right" Height="50" FontSize="22" Margin="20,0,50,0">
                        <TextBox.Effect>
                            <DropShadowEffect Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>
                </DockPanel>
                <local:GradientButtonUI x:Name="SaveButton" Margin="50" DockPanel.Dock="Top" Height="54" MouseLeftButtonUp="SaveButton_MouseLeftButtonUp" MouseLeave="SaveButton_MouseLeave" />
            </DockPanel>
        </StackPanel>
    </Grid>
</UserControl>
